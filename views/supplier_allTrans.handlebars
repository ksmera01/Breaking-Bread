<script src='/js/dash-script.js'></script>


<div class="container-fluid">
    <nav class="navbar navbar-expand-md">
        <img class="breadImgMini" src="/images/bread.png" alt="breadImage">

        <h2 class="navbar-brand" id="bb-menu-header">Breaking Bread</h2>

        <nav class="navbar-nav row justify-content-end">

            <a style="margin-left: 20px" class="nav-item nav-link col btn btn-light btn1" href="/requests">Back to
                Dashboard</a>

            <a class="nav-item nav-link col btn btn-light btn2" href="/invAll">See all my posts</a>

            <a class="nav-item nav-link col btn btn-light btn3" href="/suppUpdate">Update Account</a>

            <a class="nav-item nav-link col btn btn-light btn-log" href="/logout">Logout</a>

        </nav>
    </nav>


    <div class="row">
        <div class="container col-md-3">
            <br>
        </div>
        <div class="foodav-container col-md-6">
            <div class="author-container">
                <h1 class="foodav">All Transactions</h1>
                <table class="table table-bg">
                    <thead>
                        <tr>
                            <th scope="col">Food Item</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Category</th>
                            <th scope="col">Requester Name</th>
                            <th scope="col">Requester Contact Info</th>
                            <th scope="col">Requester Address</th>
                            <th scope="col">Claimed or Fulfilled?</th>
                            <th scope="col">Date of Transaction</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each all}}
                        <tr>
                            <td>{{this.s_item}}</td>
                            <td>{{this.s_amount}}</td>
                            <td>{{this.s_itemCat}}</td>
                            <td>{{this.orgName}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.fulfilled}}</td>
                            <td>{{this.createdAt}}</td>
                        </tr>
                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>