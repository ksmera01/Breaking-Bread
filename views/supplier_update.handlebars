<script src='/js/dash-script.js'></script>

<div class="navbar-header">
    <a class="navbar-brand" href="/logout">
        Logout
    </a>
</div>


<div class="container-fluid">
    <nav class="navbar navbar-expand-md">
        <a class="navbar-brand" href='/'>
            <h2>Breaking Bread</h2>
        </a>

        <nav class="navbar-nav row justify-content-end">

            <a class="nav-item nav-link col btn btn-light btn1" href="/requests">Back to Dashboard</a>

            <a class="nav-item nav-link col btn btn-light btn2" href="/invAll">See All Requests</a>

            <a class="nav-item nav-link col btn btn-light btn3" href="/suppTrans">See All Transactions</a>

        </nav>
    </nav>


    <div class="row">
        <div class="container col-md-3">
            <br>
        </div>
        <div class="foodav-container col-md-6">
            <div class="author-container">
                <h1 class="foodav">Update Information</h1>
                <table class="table table-bg">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Organization</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Address</th>
                            <th scope="col">Phone Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each all}}
                        <tr>
                            <td>{{this.r_item}}</td>
                            <td>{{this.r_amount}}</td>
                            <td>{{this.r_itemCat}}</td>
                            <td>{{this.DonatedBy}}</td>
                            <td>{{this.fulfilledBy}}</td>
                            <td>{{this.createdAt}}</td>
                        </tr>
                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>